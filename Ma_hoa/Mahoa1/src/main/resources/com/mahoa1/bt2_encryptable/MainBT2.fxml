<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.mahoa1.bt2_encryptable.ControllerBT2">
    <Label text="Nhập dữ liệu"/>
    <TextField fx:id="inputField"/>
    <Button text="Mã hóa AES" onAction="#encryptAES"/>
    <Button text="Giải mã AES" onAction="#decryptAES"/>
    <Separator />
    <Button text="Mã hóa RSA" onAction="#encryptRSA"/>
    <Button text="Giải mã RSA" onAction="#decryptRSA"/>
    <TextArea fx:id="resultArea" prefHeight="100" editable="false"/>
</VBox>
